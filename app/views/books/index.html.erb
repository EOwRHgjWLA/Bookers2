<div class="container">
  <div class="mt-3">
    <% if @book.errors.any? %>
    <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="row">
    <div class="mt-3 col-md-3">
      <%= render "newbook", book: @books %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class ="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= image_tag book.user.get_profile_image(80,80) %></td>
                <td><%= link_to "#{book.title}", book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>