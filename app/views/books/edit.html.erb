<div class="container">
  <div class="row">
    <div class="mt-3 mx-auto col-7">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title, class:"form-control" %>
        <p>Opinion</p>
        <%= f.text_area :body, class:"form-control" %></br>
        <%= f.submit 'Update Book', class:"btn btn-sm btn-success" %>
      <% end %>
      <br>
      <%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>