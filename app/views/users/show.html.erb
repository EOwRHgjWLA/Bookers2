<div class="container">

  <div class="row">

    <div class="mt-3 col-md-3">
      <%= render "books/userinfo", user: @user %>
    </div>

    <div class="mt-3 col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
        <table class ="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
      <% @user.books.each do |b| %>
              <tr>
                <td>
                  <%= link_to image_tag(b.user.get_profile_image(80,80)), user_path %>
                </td>
                <td><%= link_to "#{b.title}", book_path(b) %></td>
                <td><%= b.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>
  </div>
</div>