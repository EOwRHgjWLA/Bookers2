<div class="container">
  <div class="row">
    <div class="mt-3 mx-auto col-7">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>errors prohibited this book from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
          <% end %>
      <%= form_with model: @user do |f| %>

        <p>Name</p>
        <%= f.text_field :name, class:"form-control" %>

        <p>Image</p>
        <%= f.file_field :profile_image, accept: "image/*" %>

        <p>Introduction</p>
        <%= f.text_area :introduction, class:"form-control" %>
        <br>
        <%= f.submit 'Update User', class:"btn btn-secondary" %>

      <% end %>
    </div>
  </div>
</div>