<div class="container">

  <div class="row">

    <div class="mt-3 col-md-3">
      <%= render "books/newbook", book: @books %>
    </div>

    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Users</h2>
        <table class ="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |u| %>
              <tr>
                <td><%= image_tag u.get_profile_image(80,80) %></td>
                <td><%= u.name %></td>
                <td><%= link_to "Show", user_path(u) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>

  </div>

</div>